/* pages/suggest/suggest.wxss */

page{
  width: 100%;
  height: 100%;
  color: #eeee;
}
.navBar {
  width: 100%;
  height: 10%;
  /* border-bottom: 1rpx solid #eee; */
}
.navigator_text{
  width: 100%;
  text-align: center;
  color: #eee;
}
.bg_img{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -99;
}
.van_notice_bar_style{
  background-color: transparent !important;
  font-size: 30rpx !important;
}
.suggest_text{
  font-size: 32rpx;
  margin: 50rpx 0 0 30rpx;
}
.suggest_type_box{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin: 33rpx 70rpx;
  justify-content: space-between;
}
.suggest_type_box view{
  width: 180rpx;
  height: 66rpx;
  text-align: center;
  background-color: rgb(147, 193, 240);
  border-radius: 40rpx;
  line-height: 66rpx;
  opacity: .6;
  margin-bottom: 30rpx;
  font-size: 30rpx;
}
.sel_item_style{
  background-color: rgb(11, 128, 245) !important;
}
.textarea_style{
  margin: 33rpx 70rpx;
  padding: 15rpx;
  width: 78%;
  color: #fff;
  height: 300rpx;
  background-color: #ccc;
  opacity: .5;
  border-radius: 30rpx;
}
.submit_style{
  width: 400rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: rgb(47, 69, 240);
  opacity: .3;
  margin: 100rpx auto;
  border-radius: 40rpx;
  color: #eee;
  
}
.submit_style_hover{
  background-color: rgb(10, 30, 177);
}
